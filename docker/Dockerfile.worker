
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for ML models
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libgl1-mesa-glx \
    libglib2.0-0 \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY .env .env

# Download ML models (or use model registry)
RUN python -c "from transformers import WhisperProcessor; WhisperProcessor.from_pretrained('openai/whisper-base')"

CMD ["python", "-m", "src.workers.base_worker"]
